{
  "extends": "../tsconfig.shared.json",
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "target": "ES2020",
    "module": "ES2020",
    "useDefineForClassFields": true,
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "test", "*.config.[tj]s"]
}
